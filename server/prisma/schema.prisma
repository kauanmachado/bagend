// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id String @id @default(uuid())
  nome_completo String
  email String @unique
  senha String 
  endereco String

  agendas Agenda[]
  avaliacoes Avaliacao[]
  salvos Salvo[]
}

model Barbearia {
  id String @id @default(uuid())
  nome_barbearia String
  email String @unique
  cnpj String @unique
  senha String
  endereco String
  lat String
  lng String
  foto_perfil String
  telefone String
  link_instagram String

  agendas Agenda[]
  cortesestilos CortesEstilos[]
  profissionais Profissional[]
  avaliacoes Avaliacao[]
}

model Agenda {
  id String @id @default(uuid())
  id_cliente String
  id_barbearia String
  corte String
  data_horario DateTime

  cliente Cliente @relation(fields: [id_cliente], references: [id])
  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])

}

model CortesEstilos {
  id String @id @default(uuid())
  id_barbearia String
  nome_corte String
  tempo_estimado String
  preco Float
  

  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
}

model Profissional {
  id String @id @default(uuid())
  id_barbearia String
  nome_profissional String
  foto_profissional String

  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
}

model Avaliacao {
  id String @id @default(uuid())
  id_barbearia String
  id_cliente String
  comentario String
  nota Int

  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
  cliente Cliente @relation(fields: [id_cliente], references: [id])
}

model Salvo {
  id String @id @default(uuid())
  id_cliente String
  nome_barbearia String
  endereco_barbearia String

  cliente Cliente @relation(fields: [id_cliente], references: [id])
}