// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id String @id @default(uuid())
  nome_completo String
  email String @unique
  senha String 
  endereco String
  lat String
  lng String

  agendas Agenda[]
  salvos Salvo[]
}

model Barbearia {
  id String @id @default(uuid())
  nome_barbearia String
  email String @unique
  cnpj String @unique
  senha String
  endereco String
  lat String
  lng String
  foto_perfil String
  telefone String
  link_instagram String

  agendas Agenda[]
  horarios HorarioDisponivel[]
  cortesestilos CortesEstilos[]
  profissionais Profissional[]
  salvos Salvo[]
}

model Agenda {
  id String @id @default(uuid())
  id_cliente String
  id_barbearia String
  id_corteestilo String
  id_profissional String
  id_datahorario String

  cliente Cliente @relation(fields: [id_cliente], references: [id])
  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
  cortesestilos CortesEstilos @relation(fields: [id_corteestilo], references: [id])
  profissional Profissional @relation(fields: [id_profissional], references: [id])

}

model CortesEstilos {
  id String @id @default(uuid())
  id_barbearia String
  nome_corte String
  tempo_estimado String
  preco Float
  
  agendas Agenda[]
  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
}

model Profissional {
  id String @id @default(uuid())
  id_barbearia String
  nome_profissional String
  foto_profissional String

  agendas Agenda[]
  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
}


model Salvo {
  id String @id @default(uuid())
  id_cliente String
  id_barbearia String
  data DateTime

  cliente Cliente @relation(fields: [id_cliente], references: [id])
  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
}

model HorarioDisponivel {
  id String @id @default(uuid())
  id_barbearia String
  dataHorario String @unique
  horario String

  barbearia Barbearia @relation(fields: [id_barbearia], references: [id])
}